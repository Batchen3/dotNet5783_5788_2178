<Window x:Class="PL.Cart.CartListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Cart"
        mc:Ignorable="d"
        Title="CartListWindow" Height="483" Width="800">
    <Grid>
        <Grid Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="400*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ListView x:Name="CartListview" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,48,0,27" Grid.RowSpan="2" MouseDoubleClick="CartListview_MouseDoubleClick" SelectionChanged="CartListview_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button x:Name="btnSaveCart" Content="save cart" Grid.Row="2" HorizontalAlignment="Left" Margin="732,0,0,0" Padding="5" Click="btnSaveCart_Click" RenderTransformOrigin="0.5,0.5" Height="28" VerticalAlignment="Center" />
        </Grid>
    </Grid>
</Window>
